@model PaperStore.WareHouseData.CompaniesList

@{
    ViewData["Title"] = "Lista produktów";
}

<h1>Wybierz produkt</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayName("Nazwa firmy")
                @Html.DropDownListFor(item => item.Id, new SelectList(@ViewBag.ProductList, "Id", "CompanyName"))
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Dalej" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> <input type="submit" value="Wróć do listy" class="btn btn-outline-info" /></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}