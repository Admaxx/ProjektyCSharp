@model JustTalk.justTalkModels.User

@{
    ViewData["Title"] = "Zarejestruj pałę";
}

<h1>Zarejestruj pałę</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUpSucc" asp-controller="Info" method="post">
            <div class="form-group">
                @Html.LabelFor(m => m.Nick)
                @Html.TextBoxFor(m => m.Nick, new { @class = "form-control", required = "required", placeholder = "Tutaj nikałek" })
                @Html.Label(@ViewBag.UserAlreadyTaken, null, new { @class = "form-control", style = "color:#ff0000" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Tutaj hałso payacu" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Narazie wyłączona opcja" })
            </div>
            <div class="form-group">
                <button class="btn btn-secondary">Wybierz</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

