@model CEIDGASPNetCore.Models.DanePobierzRaportZbiorczy

@{
    ViewData["Title"] = "Raport Zbiorczy";
}

<h1>Wyświetl raport zbiorczy</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("InsertRaportZbiorczy", "CEIDG", FormMethod.Post))
        {
            <div class="form-group">
                <label asp-for="DataRaportu" class="control-label"></label>
                @Html.TextBoxFor(item => item.DataRaportu, new {@class="form-control", @type = "date"})
                <span asp-validation-for="DataRaportu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NazwaRaportu" class="control-label"></label>
                @Html.DropDownListFor(item => item.NazwaRaportu, new SelectList(ViewBag.RaportsList, "NazwaRaportu","Opis"), new {@class="form-control"})
                <span asp-validation-for="NazwaRaportu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Wybierz" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do menu</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}