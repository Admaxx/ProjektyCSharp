@model CEIDGASPNetCore.Models.DaneSzukajPodmiotyModel

@{
    ViewData["Title"] = "Szukaj Podmioty";
}

<h1>Wyświetl Podmioty</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertDaneSzukajPodmioty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Regon" class="control-label"></label>
                @Html.TextBoxFor(item => item.Regon, new {@class="form-control"})
            </div>
            <div class="form-group">
                <label asp-for="NIP" class="control-label"></label>
                @Html.TextBoxFor(item => item.NIP, new {@class="form-control"})
            </div>
            <div class="form-group">
                <label asp-for="KRS" class="control-label"></label>
                @Html.TextBoxFor(item => item.KRS, new {@class="form-control"})
            </div>
            <div class="form-group">
                <input type="submit" value="Wybierz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do menu</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
